# Firebase Configuration
VITE_FIREBASE_API_KEY=your_firebase_api_key
VITE_FIREBASE_AUTH_DOMAIN=your_project.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your_project_id
VITE_FIREBASE_STORAGE_BUCKET=your_project.firebasestorage.app
VITE_FIREBASE_MESSAGING_SENDER_ID=your_messaging_sender_id
VITE_FIREBASE_APP_ID=your_app_id
VITE_FIREBASE_MEASUREMENT_ID=your_measurement_id

# Pinata IPFS Configuration
VITE_PINATA_API_KEY=your_pinata_api_key
VITE_PINATA_SECRET_KEY=your_pinata_secret_key
VITE_PINATA_JWT=your_pinata_jwt

# Alchemy Configuration
VITE_ALCHEMY_API_KEY=your_alchemy_api_key
VITE_ALCHEMY_NETWORK=polygon-mainnet

# Etherscan/Polygonscan API (optional, for verification)
VITE_POLYGONSCAN_API_KEY=your_polygonscan_api_key

# SheerID Student Verification
# Get your Program ID from https://developer.sheerid.com/
VITE_SHEERID_PROGRAM_ID=demo

# Smart Contract Address (Deploy to Polygon and add address here)
# Leave empty to run in demo mode
VITE_CONTRACT_ADDRESS=

# Deployer Private Key (for contract deployment only - NEVER commit this!)
# Export from MetaMask: Account Details > Export Private Key
DEPLOYER_PRIVATE_KEY=
